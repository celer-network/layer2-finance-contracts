{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["node_modules"],
  "include": [
    "artifacts/**/*",
    "artifacts/**/*.json",
    "deploy/**/*",
    "benchmark/**/*",
    "scripts/**/*",
    "tasks/**/*",
    "test/**/*",
    "test-strategy/**/*",
    "typechain/**/*",
    "types/**/*",
    "hardhat.config.ts"
  ]
}
